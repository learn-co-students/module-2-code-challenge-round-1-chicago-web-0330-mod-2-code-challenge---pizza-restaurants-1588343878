<h1>New Pizza Form</h1>

<% if @pizza.errors.any? %>
  <% @pizza.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>


<%= form_for @pizza do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>
  <%= f.label :ingredients, "Ingredients: (separate them with a ',')" %>
  <%= f.text_field :ingredients %>
  <%= f.label :restaurants, "Restaurants:"%>
  <%= f.collection_select :restaurants, Restaurant.all, :id, :name %>
  <%= f.submit %>
<% end %>