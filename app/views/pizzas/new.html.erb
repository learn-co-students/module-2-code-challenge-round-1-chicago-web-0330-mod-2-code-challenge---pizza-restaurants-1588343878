<%= form_for (@pizza) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>

    <%= f.label :restaurant_id %>
    <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>

    <%= f.submit %>
<% end %>

<% if @pizza.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@pizza.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @pizza.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>