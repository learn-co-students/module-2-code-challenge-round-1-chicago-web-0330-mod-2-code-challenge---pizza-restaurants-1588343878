<% @pizza.errors.full_messages.each do |error| %>
<%= error %><br>
<% end %>

<h1>New Pizza! </h1>
<%= form_for @pizza do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :ingredients %>
<%= f.text_field :ingredients %><br>
<%= f.label :restaurants %>
<%= f.collection_select :restaurants, Restaurant.all, :id, :name %>
<%= f.submit "Make a da pizza"%>
<% end %>