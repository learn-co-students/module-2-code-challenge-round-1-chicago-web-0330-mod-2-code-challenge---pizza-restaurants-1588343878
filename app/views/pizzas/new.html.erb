<h1 style='font-size:1.5rem;margin-top:50px'>New Pizza Form</h1>

<% if @pizza.errors.any? %>
  <% @pizza.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
  <br>
<% end %>

<%= form_for @pizza do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_area :ingredients %>
  <%= f.submit %> 
<% end %>

