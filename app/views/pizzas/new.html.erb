<%= form_for @pizza do |f|%>
<% if @pizza.errors.any? %>
<ul>
  <%@pizza.errors.full_messages.each do |msg|%>
    <li><%=msg%></li>
    <%end%>
  </ul>
<%end%>
 <%=f.label :name%>
 <%=f.text_field :name%>

 <%=f.label :ingredients%>
 <%=f.text_field :ingredients%>

<%= f.collection_select :restaurant_ids, Restaurant.all, :id, :name %>


 <%=f.submit%>
<%end%>


