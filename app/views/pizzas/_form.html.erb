<% if pizza.errors %>
  <% pizza.errors.full_messages.each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end%>
<% end %>



<%= form_for pizza do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>
  <br>
  <%= f.label :restaurant_ids, 'Restaurant' %>
  <%= f.collection_select :restaurant_ids, @restaurants, :id, :name %>
  <br>
  <%= f.submit %>
<% end %>