<h1>Edit Restaurant</h1>
<%= form_for @restaurant do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %><br>
  <%= f.label :address, "Address:" %>
  <%= f.text_field :address %><br>
  <%= f.label :pizzas, "Select Pizzas:"%>
  <%= f.collection_check_boxes :pizzas, Pizza.all, :id, :name %><br>
  <%= f.submit %>
<% end %>