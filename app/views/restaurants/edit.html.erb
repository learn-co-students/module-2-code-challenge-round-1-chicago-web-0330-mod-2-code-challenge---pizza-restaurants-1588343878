<h1>Restaurant Edit Form</h1>

<%= form_for(@restaurant) do |f| %>
    <%= f.label :name, "Restaurant name:" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :address, "Restaurant address:" %>
    <%= f.text_field :address %>
    <br>
    <%= f.collection_check_boxes :pizza_ids, Pizza.all, :id, :name %> 
    <br>
    <%= f.submit %>
<% end %> 