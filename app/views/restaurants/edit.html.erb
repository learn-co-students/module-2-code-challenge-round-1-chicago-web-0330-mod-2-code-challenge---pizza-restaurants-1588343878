<h1>Update restaurant</h1>
<% if @restaurant.errors %>
  <% @restaurant.errors.full_messages.each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end%>
<% end %>



<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :pizza_ids, 'Pizza' %>
  <%= f.collection_check_boxes :pizza_ids, @pizzas, :id, :name %>
  <%= f.submit %>
<% end %>